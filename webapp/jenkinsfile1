pipeline {
    agent any

    stages {
        stage('Building Docker image') {
            steps {
                sh 'docker rmi -f img-frontend'
		sh 'cd webapp && docker build -f Dockerfile -t img-frontend .'
            }
        }

stage('Building Docker container') {
            steps {
		sh 'docker run -d -p 8080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080080:80 --network mynetwork --name cont-frontend img-frontend'
            }
        }

    }
}
